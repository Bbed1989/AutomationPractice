package Pages;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

public class SeleniumRubyProduct {
	WebDriver driver;
	@FindBy(xpath = "//*[@id=\"product-160\"]/div[2]/form/button")
	WebElement addToBasketButton;
	
	@FindBy(xpath = "//a[@href='#tab-description']")
	WebElement descriptionTab;
	
	public SeleniumRubyProduct(WebDriver driver) {
		this.driver = driver;
		PageFactory.initElements(driver, this);
	}
	
	
	
	public boolean addToBasketButtonDisplayed() {
		return addToBasketButton.isDisplayed();
	}
	
	public void clickkDescriptionTab() {
		descriptionTab.click();
	}

}
